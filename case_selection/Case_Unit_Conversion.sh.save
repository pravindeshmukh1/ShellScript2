#!/bin/bash -x

read -p "Enter the input:= " no

echo "enter the Feet to Inch" 1
echo "enter the Feet to Meter" 2
echo "enter the Inch to Feet " 3
echo "enter the Meter to Feet" 4
read -p "enter choice" option
case $option in
	1) result1=$(($no * 12))
		echo $result1 ;;
	2) result=$(($no * 0.30)) 
		echo $result ;;
	3 ) echo $no / 12 ;;
	4 ) result1= $(($no * 3.2808))
		echo $result1 ;;
esac
